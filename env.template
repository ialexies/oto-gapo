# Docker Deployment Environment Variables
# Copy this file to .env and update with your actual values
# Command: cp env.template .env

# Domain name for the application
DOMAIN=otogapo.lexserver.org

# Email for Let's Encrypt notifications (certificate expiry, etc.)
EMAIL=your-email@example.com

# Optional: Staging mode for Let's Encrypt (use for testing)
# Set to 1 to use staging server (won't issue valid certificates but no rate limits)
# Set to 0 or remove for production
LETSENCRYPT_STAGING=0

# Optional: Docker image tag/version
IMAGE_TAG=latest

# Optional: Server timezone
TZ=UTC

